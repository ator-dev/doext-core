{
	"manifest_version": 3,
	"name": "doExt Core",
	"description": "Run common actions quickly",
	"version": "0.0.0",

	"browser_specific_settings": { "gecko": { "id": "core@ator-dev" } },

	"icons": {
		"48": "/icons/core.svg",
		"96": "/icons/core.svg"
	},

	"permissions": [
		"scripting",
		"tabs",
		"storage",
		"search",
		"contextMenus"
	],

	"optional_permissions": [],

	"background": {
		"scripts": [
			"/dist/action-api.js",
			"/dist/background.js"
		]
	},

	"action": {
		"default_icon": "/icons/core.svg",
		"default_title": "doExt Core",
		"default_popup": "/pages/popup.html"
	},

	"commands": {
		"open-popup": {
			"suggested_key": { "default": "Alt+Shift+Space" },
			"description": "Open the action input"
		}
	}
}
